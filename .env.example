# Aetherium Environment Configuration
# Copy this file to .env and update with your values

# ===================================
# Vault Configuration
# ===================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=aetherium-dev-token
VAULT_MOUNT=secret

# ===================================
# Database Configuration
# ===================================
# Note: In production, these are fetched from Vault
# These are fallback values for development
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=aetherium
POSTGRES_PASSWORD=aetherium
POSTGRES_DB=aetherium

# ===================================
# Redis Configuration
# ===================================
REDIS_ADDR=localhost:6380
REDIS_PASSWORD=

# ===================================
# Consul Configuration
# ===================================
CONSUL_ADDR=localhost:8500

# ===================================
# Loki Configuration
# ===================================
LOKI_URL=http://localhost:3100

# ===================================
# Integration Secrets
# ===================================
# Note: In production, these are stored in Vault
# These are examples for development

# GitHub
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your_signing_secret_here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here
DISCORD_PUBLIC_KEY=your_public_key_here

# ===================================
# API Gateway Configuration
# ===================================
PORT=8080
JWT_SECRET=your_jwt_secret_here
API_KEY_1=your_api_key_here

# ===================================
# Worker Configuration
# ===================================
WORKER_ID=worker-1
WORKER_ZONE=us-east-1
WORKER_LABELS=env=dev,type=firecracker

# ===================================
# Firecracker Configuration
# ===================================
FIRECRACKER_KERNEL_PATH=/var/firecracker/vmlinux
FIRECRACKER_ROOTFS_PATH=/var/firecracker/rootfs.ext4
FIRECRACKER_SOCKET_DIR=/tmp
FIRECRACKER_DEFAULT_VCPU=1
FIRECRACKER_DEFAULT_MEMORY_MB=256

# ===================================
# Tool Installation
# ===================================
AETHERIUM_DEFAULT_TOOLS=git,nodejs,bun,claude-code
AETHERIUM_TOOL_TIMEOUT=20m

# ===================================
# Network Configuration
# ===================================
BRIDGE_NAME=aetherium0
BRIDGE_IP=172.16.0.1/24
VM_SUBNET=172.16.0.0/24
TAP_PREFIX=aether-

# ===================================
# Proxy Configuration
# ===================================
SQUID_PROXY_ADDR=172.16.0.1:3128
SQUID_WHITELIST_PATH=/etc/squid/whitelist.txt

# ===================================
# Development Flags
# ===================================
LOG_LEVEL=info
DEBUG=false
ENABLE_PROFILING=false

# ===================================
# Production Flags
# ===================================
# USE_VAULT=true
# TLS_ENABLED=true
# TLS_CERT_PATH=/etc/aetherium/tls/cert.pem
# TLS_KEY_PATH=/etc/aetherium/tls/key.pem
